<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tsdm.angelanime.main.MainActivity">

    <include
        android:id="@+id/i_toolbar"
        layout="@layout/toolbar"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/i_toolbar"
        app:layout_constraintBottom_toTopOf="@+id/rg_navigation">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@color/white">
        <RadioButton
            android:id="@+id/rb_home"
            style="@style/nav_rb"
            android:checked="false"
            android:drawableTop="@drawable/home"/>
        <RadioButton
            android:id="@+id/rb_classify"
            style="@style/nav_rb"
            android:checked="false"
            android:drawableTop="@drawable/classify"/>
    </RadioGroup>

</android.support.constraint.ConstraintLayout>
