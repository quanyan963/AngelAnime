<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_comment_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/light_grey"
        app:layout_constraintBottom_toTopOf="@+id/rl_input">

    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rlv_reply_list"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rl_input"
        android:background="@color/light_grey">

    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:id="@+id/rl_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white">
        <EditText
            android:id="@+id/et_con"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_submit"
            android:textSize="@dimen/dp_12_x"
            android:background="@drawable/background_input"
            android:paddingLeft="@dimen/dp_8_x"
            android:paddingTop="@dimen/dp_4_y"
            android:paddingBottom="@dimen/dp_4_y"
            android:layout_marginLeft="@dimen/dp_8_x"
            android:layout_marginTop="@dimen/dp_6_y"
            android:layout_marginBottom="@dimen/dp_6_y"
            android:layout_marginRight="@dimen/dp_8_x"
            android:hint="@string/no_name"/>
        <TextView
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_8_x"
            android:text="@string/comment"/>
    </RelativeLayout>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_hint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/low_grey"
        android:textSize="@dimen/dp_14_x"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rl_input"
        android:background="@color/light_grey"
        android:text="@string/no_reply" />
</android.support.constraint.ConstraintLayout>