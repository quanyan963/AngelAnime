<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:visibility="gone"
        android:id="@+id/v_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/dp_16_y"/>
    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_below="@+id/v_top"
        android:layout_toLeftOf="@+id/v_right"
        android:padding="@dimen/dp_8_x"
        android:gravity="center"
        android:background="@drawable/list_state">
        <TextView
            android:id="@+id/tv_name"
            style="@style/main_tv"
            android:layout_width="match_parent"
            android:lines="2"
            android:ellipsize="end"
            android:textSize="@dimen/dp_14_x"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_update"
            style="@style/main_tv"
            android:layout_width="match_parent"
            android:textColor="@color/low_grey"
            android:layout_below="@id/tv_name"
            android:textSize="@dimen/dp_14_x"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_16_x"/>

</RelativeLayout>