<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintLeft_toRightOf="@+id/v_left"
        app:layout_constraintTop_toBottomOf="@+id/v_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v_right"
        android:padding="@dimen/dp_8_x"
        android:background="@drawable/list_statue">
        <TextView
            android:id="@+id/tv_name"
            style="@style/main_tv"
            android:layout_marginLeft="@dimen/dp_4_x"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_update"
            style="@style/main_tv"
            android:textColor="@color/low_grey"
            android:layout_below="@id/tv_name"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:ellipsize="end"/>
    </RelativeLayout>
    <View
        android:id="@+id/v_right"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_16_x"/>
    <View
        android:id="@+id/v_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_16_x"/>
    <View
        android:id="@+id/v_left"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/dp_16_x"/>

</android.support.constraint.ConstraintLayout>