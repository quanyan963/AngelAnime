<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/sl_name"
        android:layout_width="@dimen/dp_70_x"
        android:layout_height="@dimen/dp_18_y"
        android:layout_marginLeft="@dimen/dp_8_x"
        android:layout_marginTop="@dimen/dp_8_y"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_color="@color/white"
        app:shimmer_animation_duration="1200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_back"/>
    </io.supercharge.shimmerlayout.ShimmerLayout>
    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/sl_time"
        android:layout_width="@dimen/dp_90_x"
        android:layout_height="@dimen/dp_18_y"
        android:layout_marginRight="@dimen/dp_8_x"
        android:layout_marginTop="@dimen/dp_8_y"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shimmer_color="@color/white"
        app:shimmer_animation_duration="1200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_back"/>
    </io.supercharge.shimmerlayout.ShimmerLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/sl_message"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_46_y"
        android:layout_marginTop="@dimen/dp_8_y"
        android:layout_marginRight="@dimen/dp_8_x"
        android:layout_marginBottom="@dimen/dp_8_y"
        android:layout_marginLeft="@dimen/dp_8_x"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sl_name"
        app:layout_constraintBottom_toTopOf="@+id/v_line"
        app:shimmer_color="@color/white"
        app:shimmer_animation_duration="1200">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_back"/>
    </io.supercharge.shimmerlayout.ShimmerLayout>

    <View
        android:id="@+id/v_line"
        style="@style/main_line"
        app:layout_constraintTop_toBottomOf="@+id/sl_message"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>