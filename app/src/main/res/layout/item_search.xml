<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_statue">
        <com.tsdm.angelanime.widget.RoundImageView
            android:id="@+id/riv_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tv_title"/>
        <TextView
            android:id="@+id/tv_title"
            style="@style/main_tv"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dp_16_x"
            android:layout_marginRight="@dimen/dp_16_x"
            android:gravity="center"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_above="@+id/tv_statue"
            android:text="sssss"/>
        <TextView
            android:id="@+id/tv_statue"
            style="@style/main_tv"
            android:layout_marginLeft="@dimen/dp_16_x"
            android:layout_marginRight="@dimen/dp_16_x"
            android:textSize="@dimen/dp_14_x"
            android:textColor="@color/low_grey"
            android:layout_above="@+id/tv_update"
            android:layout_alignParentLeft="true"
            android:text="aaaaa"/>
        <TextView
            android:id="@+id/tv_update"
            style="@style/main_tv"
            android:layout_marginLeft="@dimen/dp_16_x"
            android:layout_marginRight="@dimen/dp_16_x"
            android:textSize="@dimen/dp_14_x"
            android:textColor="@color/low_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="aaaaa"/>
    </RelativeLayout>

</RelativeLayout>