<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_remote_title"
        style="@style/main_tv"
        android:layout_marginLeft="@dimen/dp_16_x"
        android:layout_marginBottom="@dimen/dp_6_y"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ProgressBar
        android:id="@+id/pb_download"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_4_y"
        android:layout_marginRight="@dimen/dp_16_x"
        android:layout_marginLeft="@dimen/dp_16_x"
        android:layout_centerInParent="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/colorAccent"
        android:progressDrawable="@drawable/progress_bar"
        android:max="100"/>

    <TextView
        android:id="@+id/tv_start"
        style="@style/main_tv"
        android:textSize="@dimen/dp_12_x"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_16_x"
        android:layout_marginBottom="@dimen/dp_4_y"
        android:text="@string/_continue"
        />
    <TextView
        android:id="@+id/tv_cancel"
        style="@style/main_tv"
        android:textSize="@dimen/dp_12_x"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tv_start"
        android:layout_marginBottom="@dimen/dp_4_y"
        android:layout_marginLeft="@dimen/dp_16_x"
        android:text="@string/cancel"/>
</RelativeLayout>